@model KYC_EDDPortal.ViewModels.LoginRequestModel
@{
    ViewData["Title"] = "Login";
    Layout = null;

}

<header>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Login" name="description" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">

    <!-- preloader css -->
    <!-- Bootstrap Css -->
    <link href="~/minia-template/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/minia-template/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/minia-template/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

</header>
<body>

    <!-- <body data-layout="horizontal"> -->
    <div class="auth-page">
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-xxl-5 col-lg-4 col-md-5">
                    <div class="auth-full-page-content d-flex p-sm-5 p-4">
                        <div class="w-100">
                            <div class="d-flex flex-column h-100">
                                <div class="mb-4 mb-md-5 text-center">
                                    <a href="@Url.Action("Login", "Auth")" class="d-block auth-logo">
                                        <img src="~/minia-template/images/MicrosoftTeams-image.png" alt="" height="28"> 
                                    </a>
                                    <p> </p>
                                    <p><span class="logo-txt">KYC/EDD Portal</span></p>
                                </div>
                                <div class="auth-content my-auto">
                                    <div class="text-center">
                                        <h5 class="mb-0">Welcome Back !</h5>
                                        <p class="text-muted mt-2">Sign in to continue to this Portal.</p>
                                    </div>
                                    <form asp-controller="Auth" asp-action="Login" method="post">
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <strong>
                                                    <label asp-for="Username">Username:</label>
                                                    <input asp-for="Username" class="form-control" required  placeholder="Enter Username"/>
                                                    <span class="text-danger" asp-validation-for="Username"></span>
                                                </strong>

                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <strong>
                                                    <label asp-for="Password">Password:</label>
                                                    <div class="input-group auth-pass-inputgroup">
                                                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" aria-label="Password" aria-describedby="password-addon">
                                                        <button class="btn btn-light shadow-none ms-0" type="button" id="password-addon"><i class="mdi mdi-eye-outline"></i></button>
                                                    </div>
                                                </strong>

                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <div class="form-group">
                                                <strong>
                                                    <label asp-for="AccessToken">Access Token:</label>
                                                    <input asp-for="AccessToken" class="form-control" required  placeholder="Enter AccessToken" />
                                                    <span class="text-danger" asp-validation-for="AccessToken"></span>
                                                </strong>

                                            </div>
                                        </div>


                                        <div class="mb-3">
                                            <button class="btn btn-primary w-100 waves-effect waves-light" type="submit">Log In</button>
                                        </div>
                                        @{
                                            if (ViewBag.Message != null)
                                            {
                                                <div class="alert alert-warning alert-dismissible fade show" role="alert" id="dynamic-alert">
                                                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                                    <div class="d-flex align-items-center">
                                                        <i class="fa fa-exclamation-circle me-2"></i>
                                                        <div>
                                                            <h5 class="alert-heading">Warning!</h5>
                                                            <p id="alert-message">@ViewBag.Message</p>
                                                        </div>
                                                    </div>
                                                </div>

                                            }
                                        }

                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                    <!-- end auth full page content -->
                </div>
                <!-- end col -->
                <div class="col-xxl-7 col-lg-8 col-md-7">
                    <div class="auth-bg pt-md-5 p-4 d-flex justify-content-center align-items-center" style="max-height: 100%;">
                        <div class="bg-overlay bg-primary"></div>
                        <ul class="bg-bubbles">
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                        </ul>
                        <!-- end bubble effect -->
                        <div class="row justify-content-center align-items-center">
                            <div id="reviewcarouselIndicators" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators carousel-indicators-rounded justify-content-center ms-0 mb-0">
                                    <button type="button" data-bs-target="#reviewcarouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#reviewcarouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#reviewcarouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                </div>
                                <!-- end carouselIndicators -->
                                <div class="col-xxl-12 col-lg-12 col-md-12">
                                    <div class="carousel-inner" style="max-height: 100%;">
                                        <div class="carousel-item active">
                                            <img src="~/minia-template/images/Keymobile11.png" class="d-block h-100 w-100" style="max-height: 600px;"
                                                 alt="Keymobile Picture" />
                                            <div class="carousel-caption d-none d-md-block">
                                                @*<h5>New KeyMobile App</h5>
                    <p>Go branchless with KeyMobile App.</p>*@
                                            </div>
                                        </div>

                                        <div class="carousel-item">
                                            <img src="~/minia-template/images/KEYMOBILE1.jpg" class="d-block h-100 w-100" style="max-height: 600px;"
                                                 alt="Keymobile Picture" />
                                            <div class="carousel-caption d-none d-md-block">
                                                @*<h5>KeyMobile App</h5>
                    <p>Visit the applestore or the goggle playstore to download the mobile app now</p>*@
                                            </div>
                                        </div>

                                        <div class="carousel-item">
                                            <img src="~/minia-template/images/KeyMobileApp.png" class="d-block h-100 w-100" style="max-height: 600px;"
                                                 alt="Keymobile Picture" />
                                            <div class="carousel-caption d-none d-md-block">
                                                @*<h5>KeyMobile App</h5>
                    <p>Enjoy a new world of seamless transactions</p>*@
                                            </div>
                                        </div>


                                    </div>
                                </div>
                             
                                <!-- end carousel-inner -->
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container fluid -->
    </div>


    <!-- JAVASCRIPT -->
    <script src="~/minia-template/lib/jquery/jquery.min.js"></script>
    <script src="~/minia-template/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/minia-template/lib/metismenu/metisMenu.min.js"></script>
    <script src="~/minia-template/lib/simplebar/simplebar.min.js"></script>
    <script src="~/minia-template/lib/node-waves/waves.min.js"></script>
    <script src="~/minia-template/lib/feather-icons/feather.min.js"></script>
    <!-- pace js -->
    <script src="~/minia-template/lib/pace-js/pace.min.js"></script>
    <!-- password addon init -->
    <script src="~/minia-template/js/pages/pass-addon.init.js"></script>
    <script>
        $(document).ready(function () {
            $("#username").on("change", function () {
                clearDataField();
            });

            function clearDataField() {

                $('#password').val('');
                $('#accesstoken').val('');
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            $("#password").on("change", function () {
                clearDataField();
            });

            function clearDataField() {


                $('#accesstoken').val('');
            }
        });
    </script>
    <script>
        var inputField = document.getElementById('accesstoken')
        inputField.oninput = function () {
            var removeChar = this.value.replace(/[^0-9\.]/g, ''); // This is to remove alphabets and special characters.
            // console.log(removeChar);
            var removeDot = removeChar.replace(/\./g, ''); // This is to remove "DOT"
            var RemoveDot = removeDot.substring(0, 6); // This is to restrict input to first 6 digits.
            this.value = RemoveDot;


        }
    </script>
</body>